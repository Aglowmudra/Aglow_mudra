<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bg"
    android:padding="@dimen/_40sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:text="PLease Check Your Enterred Mobile Number "
        android:textStyle="normal|bold"
        android:textSize="@dimen/_15sdp"
        android:ems="10"
        android:id="@+id/textviewpassword"
        android:hint="Enter OTP"
        android:layout_marginTop="@dimen/_170sdp"
        android:textColor="@color/colorBlack"
        android:paddingLeft="0dp"
        android:drawablePadding="@dimen/_5sdp"
        android:textColorHint="#999"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/EnterPassword"
        android:drawableLeft="@mipmap/account"
        android:background="@drawable/edittextstyleround"
        android:hint="Enter OTP"
        android:layout_marginTop="@dimen/_30sdp"
        android:textColor="#F7F6F6"
        android:paddingLeft="0dp"
        android:drawablePadding="@dimen/_5sdp"
        android:textColorHint="#999"/>

    <TextView
        android:id="@+id/Timer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/selector_xml_btn_yellow"
        android:drawablePadding="@dimen/_5sdp"
        android:ems="10"
        android:paddingLeft="0dp"
        android:text="00:00"
        android:gravity="center"
        android:textColor="#F7F6F6"
        android:textColorHint="#999"
        android:textSize="@dimen/_30sdp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Resend OTP"
        android:visibility="gone"
        android:id="@+id/resendotp"
        android:background="@drawable/buttonstyle"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Verify"
        android:id="@+id/register"
        android:background="@drawable/buttonstyle"
        android:layout_gravity="center_horizontal"
        />

    <!--    <TextView-->
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Forgot password?"
    android:id="@+id/textView3"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="40dp"
    android:textColor="#FFF"
    />
    --!>
</LinearLayout>